{
    "compilerOptions": {
        "outDir": "lib",
        "module": "ESNext",
        "lib": ["DOM","ESNext"],
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "target": "ESNext",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "moduleResolution": "Node",
        "declaration": true,
    },
    "include": ["src"],
    "exclude": [
        "node_modules","lib"
    ]
}

